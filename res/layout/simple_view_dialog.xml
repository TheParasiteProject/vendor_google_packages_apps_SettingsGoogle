<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:id="@id/simple_view_dialog_scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@id/simple_view_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:layout_marginEnd="16.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="24.0dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@id/simple_view_dialog_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8.0dip"
            android:layout_marginEnd="16.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="8.0dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:layout_marginEnd="16.0dip"
            android:layout_marginTop="16.0dip">

            <Button
                android:id="@id/simple_view_dialog_positive_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="6.0dip"
                android:layout_marginTop="6.0dip"
                android:text="@string/simple_view_dialog_positive_button"
                android:textColor="?androidprv:attr/materialColorOnPrimary"
                style="@style/SimpleViewPositiveButton" />

            <Button
                android:id="@id/simple_view_dialog_negative_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_toStartOf="@id/simple_view_dialog_positive_button"
                android:text="@string/simple_view_dialog_negative_button"
                android:textColor="?androidprv:attr/materialColorPrimary"
                style="@style/SimpleViewNegativeButton" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
