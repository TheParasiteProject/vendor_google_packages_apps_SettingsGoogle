<?xml version="1.0" encoding="utf-8"?>
<com.google.android.setupdesign.GlifLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/face_enroll_confirmation"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/FaceLayoutTheme">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        style="@style/SudContentFrame">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/lock_screen_bypass_lottie"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lock_screen_bypass_lottie_height"
            android:scaleType="centerInside"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <com.google.android.settings.biometrics.face.FaceEnrollLockScreenBypassToggle
            android:id="@id/lock_screen_bypass_toggle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip" />

    </LinearLayout>

</com.google.android.setupdesign.GlifLayout>
